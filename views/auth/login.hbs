<ul uk-tab>
    <li><a href="#">Login</a></li>
    <li><a href="#">Register</a></li>
</ul>

<ul class="uk-switcher uk-margin">
    <li class="login">
        <form action="/auth/login" method="post">
            {{#if error}}
                {{#each error}}
                    <div class="uk-alert-danger" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>{{@root.error}}</p>
                    </div>
                {{/each}}
            {{/if}}
            <h1>Sign in</h1>
            <div class="uk-margin">
                <label class="uk-form-label" for="login_email">Email</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="login_email" id="login_email" type="email" placeholder="Enter email" required>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="login_password">Password</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="login_password" id="login_password" type="password" placeholder="Enter password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="uk-button uk-button-default">Login</button>
        </form>
    </li>
    <li class="register">
        <form action="/auth/register" method="post">
            {{#if error}}
                {{#each error}}
                    <div class="uk-alert-danger" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>{{@root.error}}</p>
                    </div>
                {{/each}}
            {{/if}}
            <h1>Registration</h1>
            <div class="uk-margin">
                <label class="uk-form-label" for="register_name">Name</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="register_name" id="register_name" type="text" placeholder="Enter your name" min="1" required>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="register_email">Email</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="register_email" id="register_email" type="email" placeholder="Enter email" required>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="register_password">Password</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="register_password" id="register_password" type="password" placeholder="Enter password" required>
                </div>
            </div>

            <div class="uk-margin">
                <label class="uk-form-label" for="register_confirm">Confirm password</label>
                <div class="uk-form-controls">
                    <input class="uk-input" name="register_confirm" id="register_confirm" type="password" placeholder="Enter password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="uk-button uk-button-default">Registration</button>
        </form>
    </li>
</ul>
